# Environment configuration for Multimodal Analysis API

# Model Configuration
MODEL_CACHE_DIR=~/.cache/multimodal_models
WHISPER_MODEL_SIZE=base

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# File Upload Limits
MAX_UPLOAD_SIZE_MB=100
MAX_CONCURRENT_REQUESTS=2
REQUEST_TIMEOUT_SECONDS=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO

# Audio Transcription API Keys (choose one or more)
# Get FREE Hugging Face token from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_token_here

# Get OpenAI API key from: https://platform.openai.com/api-keys (75% cheaper than AWS)
OPENAI_API_KEY=sk-your_key_here

# Get Assembly AI API key from: https://www.assemblyai.com/ (FREE 5 hours/month)
ASSEMBLYAI_API_KEY=your_assembly_key_here

# AWS Credentials for Nova models (required for image/video/audio analysis)
# Get from AWS IAM Console: https://console.aws.amazon.com/iam/home#/security_credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-west-2
